<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gi.ctdn.dao.me.UserCollectionDAO">
	<resultMap id="BaseResultMap" type="com.gi.ctdn.pojo.me.UserCollection">
			<id column="id" property="id" jdbcType="BIGINT" />
			<result column="code" property="code" jdbcType="VARCHAR" />
			<result column="type" property="type" jdbcType="INTEGER" />
			<result column="userId" property="userId" jdbcType="INTEGER" />
	</resultMap>


	<sql id="selectFields">
		id, code, `type`, userId
	</sql>

	<select id="selectCodesByUT" resultMap="java.lang.String">
		SELECT
			code
		FROM
			app_user_collection
		<where>
			userId = #{userId,jdbcType=INTEGER} AND
			type = #{type,jdbcType=INTEGER}
		</where>
	</select>

	<select id="selectByUserId" resultMap="BaseResultMap">
		SELECT
			<include refid="selectFields"/>
		FROM
			app_user_collection
		<where>
			userId = #{userId,jdbcType=INTEGER}
		</where>
	</select>

	<insert id="insert" parameterType="com.gi.ctdn.pojo.me.UserCollection">
		INSERT
			app_user_collection
		SET
			code = #{code,jdbcType=VARCHAR},
			type = #{type,jdbcType=INTEGER},
			userId = #{userId,jdbcType=VARCHAR}
	</insert>

	<delete id="deleteByUT">
		DELETE FROM
			app_user_collection
		<where>
			userId = #{userId,jdbcType=INTEGER} AND
			type = #{type,jdbcType=INTEGER}
		</where>
	</delete>

</mapper>