<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gi.ctdn.dao.OrgMediaInfoDAO">
	<resultMap id="BaseResultMap" type="com.gi.ctdn.pojo.OrgMediaInfo">
            <result column="investOrg" property="investOrg" jdbcType="VARCHAR" />
                <result column="orgId" property="orgId" jdbcType="INTEGER" />
                <result column="code" property="code" jdbcType="VARCHAR" />
                <result column="title" property="title" jdbcType="VARCHAR" />
                <result column="eventDate" property="eventDate" jdbcType="DATE" />
                <result column="source" property="source" jdbcType="VARCHAR" />
                <result column="content" property="content" jdbcType="LONGVARCHAR" />
                <result column="link" property="link" jdbcType="VARCHAR" />
                <result column="type" property="type" jdbcType="VARCHAR" />
    	</resultMap>


	<sql id="selectFields">
	    investOrg,orgId,code,title,eventDate,source,content,link,type
	</sql>
	
			
	<select id="selectByOrgId" resultMap="BaseResultMap">
		SELECT
            <include refid="selectFields" />
		FROM
		    app_org_media_info
		WHERE  orgId = #{orgId,jdbcType=INTEGER} and type = 'N'
			order by eventDate desc
	</select>

	<select id="selectByOrgIdForHistroy" resultMap="BaseResultMap">
		SELECT
		<include refid="selectFields" />
		FROM
		app_org_media_info
		WHERE  orgId = #{orgId,jdbcType=INTEGER} and type = 'H'
	</select>
	

	<select id="selectAll" resultMap="BaseResultMap">
		SELECT
            <include refid="selectFields" />
		FROM
		    app_org_media_info
	</select>

</mapper>