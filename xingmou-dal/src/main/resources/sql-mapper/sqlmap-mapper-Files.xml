<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gi.xm.platform.dao.FilesDAO">
	<resultMap id="BaseResultMap" type="com.gi.xm.platform.pojo.Files">
					<id column="id" property="id" jdbcType="BIGINT" />
								<result column="type" property="type" jdbcType="INTEGER" />
								<result column="source_id" property="sourceId" jdbcType="BIGINT" />
								<result column="pic" property="pic" jdbcType="VARCHAR" />
								<result column="pic_big" property="picBig" jdbcType="VARCHAR" />
								<result column="pic_show" property="picShow" jdbcType="VARCHAR" />
								<result column="add_time" property="addTime" jdbcType="TIMESTAMP" />
								<result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
						</resultMap>

	<delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
		DELETE FROM dm_files
		WHERE id = #{id,jdbcType=BIGINT} 
	</delete>
	
	<insert id="insert" parameterType="com.gi.xm.platform.pojo.Files" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO dm_files (
			type,
			source_id,
			pic,
			pic_big,
			pic_show,
			add_time,
			update_time
		)
		VALUES
		(
			#{type,jdbcType=INTEGER},
			#{sourceId,jdbcType=BIGINT},
			#{pic,jdbcType=VARCHAR},
			#{picBig,jdbcType=VARCHAR},
			#{picShow,jdbcType=VARCHAR},
			#{addTime,jdbcType=TIMESTAMP},
			 UNIX_TIMESTAMP()
		)
	</insert>

	<update id="updateByPrimaryKey" parameterType="com.gi.xm.platform.pojo.Files">
		UPDATE dm_files
		SET
			<if test="pic!=null">pic = #{pic,jdbcType=VARCHAR},</if>
			<if test="picBig!=null">pic_big = #{picBig,jdbcType=VARCHAR},</if>
			<if test="picShow!=null">pic_show = #{picShow,jdbcType=VARCHAR},</if>
			<if test="type!=null">type = #{type,jdbcType=INTEGER},</if>
			<if test="sourceId!=null">source_id = #{sourceId,jdbcType=BIGINT},</if>
			<if test="addTime!=null">add_time = #{addTime,jdbcType=TIMESTAMP},</if>
	    WHERE id = #{id,jdbcType=BIGINT} 
	</update>
	
		
		
	<sql id="selectFields">
	id,type,source_id,pic,pic_big,pic_show,add_time,update_time
	</sql>
	
	<select id="selectAll" resultMap="BaseResultMap">
		SELECT
		<include refid="selectFields" />
		FROM dm_files
	</select>
	
	<select id="queryFiles" resultMap="BaseResultMap" parameterType="com.gi.xm.platform.query.FilesQuery">
		SELECT
		<include refid="selectFields" />
		FROM dm_files
		<include refid="queryWhereAndOrder" />
	</select>
	
	<sql id="queryWhereAndOrder">
		<where>
					<if test="id!=null">AND id = #{id,jdbcType=BIGINT}</if>
								<if test="type!=null">AND type = #{type,jdbcType=INTEGER}</if>
								<if test="sourceId!=null">AND source_id = #{sourceId,jdbcType=BIGINT}</if>
								<if test="pic!=null and pic!=''">AND pic = #{pic,jdbcType=VARCHAR}</if>
								<if test="picBig!=null and picBig!=''">AND pic_big = #{picBig,jdbcType=VARCHAR}</if>
								<if test="picShow!=null and picShow!=''">AND pic_show = #{picShow,jdbcType=VARCHAR}</if>
								<if test="addTime!=null">AND add_time = #{addTime,jdbcType=TIMESTAMP}</if>
								<if test="updateTime!=null">AND update_time = #{updateTime,jdbcType=TIMESTAMP}</if>
							
		</where>
		<choose>
			<when test="order!=null and orderBy!=null and order!='' and orderBy!=''">order by ${orderBy} ${order}</when>
			<otherwise>order by id desc</otherwise>
		</choose>
	</sql>
	
	<select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long">
		SELECT
		<include refid="selectFields" />
		FROM dm_files
		WHERE id = #{id,jdbcType=BIGINT} 
	</select>

	<select id="selectByPrimaryKeyForUpdate" resultMap="BaseResultMap" parameterType="java.lang.Long">
		SELECT
		<include refid="selectFields" />
		FROM dm_files
		WHERE id = #{id,jdbcType=BIGINT} 
		FOR UPDATE
	</select>
			
	<select id="selectBySourceIdsType" resultMap="BaseResultMap">
		SELECT
		<include refid="selectFields" />
		FROM dm_files
		WHERE
			type = #{type,jdbcType=INTEGER}
		 AND
			source_id in
			<foreach item="item" index="index" collection="sourceIds" open="(" separator="," close=")">
				#{item}
			</foreach>
	</select>
		
</mapper>