<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gi.ctdn.dao.me.UserIndustryDAO">
	<resultMap id="BaseResultMap" type="com.gi.ctdn.pojo.me.UserIndustry">
			<id column="id" property="id" jdbcType="BIGINT" />
			<result column="userId" property="userId" jdbcType="INTEGER" />
			<result column="industryNames" property="industryNames" jdbcType="VARCHAR" />
			<result column="firstLogin" property="firstLogin" jdbcType="INTEGER" />
			<result column="departmentId" property="departmentId" jdbcType="INTEGER" />
			<result column="industryIds" property="industryIds" jdbcType="VARCHAR" />
	</resultMap>


	<sql id="selectFields">
	    id,userId,industryNames,firstLogin,departmentId,industryIds
	</sql>

	<select id="getUserIndustry" resultMap="BaseResultMap">
		SELECT
		<include refid="selectFields" />
		FROM
		app_user_industry
		<where>
			userId = #{userId,jdbcType=INTEGER}
		</where>
	</select>
	

	<update id="updateUserIndustry" parameterType="com.gi.ctdn.pojo.me.UserIndustry">
		UPDATE
			app_user_industry
		SET
			industryNames = #{industryNames,jdbcType=VARCHAR},
			industryIds = #{industryIds,jdbcType=VARCHAR}
		<where>
			userId = #{userId,jdbcType=INTEGER}
		</where>
	</update>

</mapper>