<mapper namespace="com.gi.ctdn.dao.FilesDAO">
	<resultMap id="BaseResultMap" type="com.gi.ctdn.pojo.FilesInfo">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="type" property="type" jdbcType="INTEGER" />
		<result column="relation_id" property="relationId" jdbcType="BIGINT" />
		<result column="file_path" property="filePath" jdbcType="VARCHAR" />
		<result column="created_uid" property="createdUid" jdbcType="BIGINT" />
		<result column="created_uname" property="createdUname" jdbcType="VARCHAR" />
		<result column="add_time" property="addTime" jdbcType="BIGINT" />
		<result column="update_time" property="updateTime" jdbcType="BIGINT" />
	</resultMap>


	<insert id="insert" parameterType="com.gi.ctdn.pojo.FilesInfo" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO ctdn_files (
			type,
			relation_id,
			file_path,
			created_uid,
			created_uname,
			add_time,
			update_time
		)
		VALUES
		(
			#{type,jdbcType=INTEGER},
			#{relationId,jdbcType=BIGINT},
			#{filePath,jdbcType=VARCHAR},
			#{createdUid,jdbcType=BIGINT},
			#{createdUname,jdbcType=VARCHAR},
			#{addTime,jdbcType=BIGINT},
			#{updateTime,jdbcType=BIGINT}
		)
	</insert>

	<sql id="selectFields">
	id,type,relation_id,file_path
	</sql>



	<select id="queryListByProjectId" resultMap="BaseResultMap" parameterType="java.lang.Long">
		SELECT
			<include refid="selectFields" />
		FROM
			ctdn_files
		WHERE
			relation_id = #{projectId,jdbcType=BIGINT}
		AND
			type = 1
		AND
			is_deleted = 0
	</select>

	<update id = "deleteByProjectId" parameterType="java.lang.Long">
		UPDATE  ctdn_files
		<set>
			is_deleted = 1
		</set>
		<where>
			relation_id = #{projectId,jdbcType=BIGINT}
			and is_deleted = 0
			and type = 1
		</where>
	</update>

