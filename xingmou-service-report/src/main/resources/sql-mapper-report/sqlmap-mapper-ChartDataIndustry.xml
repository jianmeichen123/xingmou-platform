<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gi.xm.report.dao.ChartDataIndustryDAO">
	<resultMap id="BaseResultMap" type="com.gi.xm.report.pojo.ChartDataIndustry">
					<id column="id" property="id" jdbcType="BIGINT" />
								<result column="industry_id" property="industryId" jdbcType="INTEGER" />
								<result column="industry_name" property="industryName" jdbcType="VARCHAR" />
								<result column="project_num" property="projectNum" jdbcType="INTEGER" />
								<result column="invested_num" property="investedNum" jdbcType="INTEGER" />
								<result column="invested_money" property="investedMoney" jdbcType="BIGINT" />
								<result column="add_time" property="addTime" jdbcType="TIMESTAMP" />
								<result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
						</resultMap>


	<insert id="insert" parameterType="com.gi.xm.report.pojo.ChartDataIndustry" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO dm_chart_data_industry (
			industry_id,
			industry_name,
			project_num,
			invested_num,
			invested_money,
			add_time,
			update_time
		)
		VALUES
		(
			#{industryId,jdbcType=INTEGER},
			#{industryName,jdbcType=VARCHAR},
			#{projectNum,jdbcType=INTEGER},
			#{investedNum,jdbcType=INTEGER},
			#{investedMoney,jdbcType=BIGINT},
			#{addTime,jdbcType=TIMESTAMP},
			 UNIX_TIMESTAMP()
		)
	</insert>

	<sql id="selectFields">
	id,industry_id,industry_name,project_num,invested_num,invested_money,add_time,update_time
	</sql>
	
			
	<select id="selectByIndustryId" resultMap="BaseResultMap">
		SELECT
		<include refid="selectFields" />
		FROM dm_chart_data_industry
		WHERE  industry_id = #{industryId,jdbcType=INTEGER}
	</select>
	
	<select id="selectEchart" resultMap="BaseResultMap">
		SELECT
		<include refid="selectFields" />
		FROM dm_chart_data_industry
	</select>
	
		
</mapper>