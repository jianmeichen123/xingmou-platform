		<include refid="selectFields" />
		FROM
		app_index_header_stat
		<where>
			<trim prefixOverrides="and">
				<if test="type !=null">
					and type = #{type}
				</if>
				<if test="month !=null">
					and month = #{month}
				</if>
				<if test="year !=null">
					and year = #{year}
