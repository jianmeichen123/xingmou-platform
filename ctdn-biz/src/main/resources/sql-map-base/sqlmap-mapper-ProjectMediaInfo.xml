<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gi.ctdn.dao.ProjectMediaInfoDAO">
	<resultMap id="BaseResultMap" type="com.gi.ctdn.pojo.ProjectMediaInfo">
                <id column="projectId" property="projectId" jdbcType="INTEGER" />
                <result column="projTitle" property="projTitle" jdbcType="VARCHAR" />
                <result column="date" property="date" jdbcType="VARCHAR" />
                <result column="source" property="source" jdbcType="VARCHAR" />
                <result column="content" property="content" jdbcType="LONGVARCHAR" />
                <result column="type" property="type" jdbcType="VARCHAR" />
                <result column="sourceCode" property="sourceCode" jdbcType="VARCHAR" />
    	</resultMap>


	<sql id="selectFields">
	    projectId,projTitle,date,source,content,type,sourceCode
	</sql>
	
			
	<select id="selectBySourceCodeAndType" resultMap="BaseResultMap" >
		SELECT
            <include refid="selectFields" />
		FROM
		    app_project_media_info
		WHERE  sourceCode = #{sourceCode,jdbcType=VARCHAR} and type = #{type,jdbcType=VARCHAR}
	</select>
			
	<select id="selectByType" resultMap="BaseResultMap">
		SELECT
            <include refid="selectFields" />
		FROM
		    app_project_media_info
		WHERE  type = #{type,jdbcType=VARCHAR}
	</select>
	

	<select id="selectAll" resultMap="BaseResultMap">
		SELECT
            <include refid="selectFields" />
		FROM
		    app_project_media_info
	</select>

</mapper>