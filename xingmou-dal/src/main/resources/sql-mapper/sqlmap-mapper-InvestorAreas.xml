		VALUES
		(
			#{investorId,jdbcType=BIGINT},
			#{areaId,jdbcType=INTEGER},
			#{addTime,jdbcType=TIMESTAMP},
			 UNIX_TIMESTAMP()
		)
	</insert>

	<update id="updateByPrimaryKey" parameterType="com.gi.xm.platform.pojo.InvestorAreas">
		UPDATE dm_investor_areas
		SET
			<if test="investorId!=null">investor_id = #{investorId,jdbcType=BIGINT},</if>
			<if test="areaId!=null">area_id = #{areaId,jdbcType=INTEGER},</if>
	    WHERE id = #{id,jdbcType=BIGINT}
